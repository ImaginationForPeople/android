<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_activated="true">
        <shape android:shape="rectangle">
		    <gradient
			    android:type="linear"
			    android:startColor="@color/i4p_4"
			    android:endColor="@color/i4p_1" />
		</shape>
	</item>
	<item android:state_hovered="true" android:drawable="@color/i4p_4" />
	<item android:state_focused="true" android:drawable="@color/i4p_4" />
	<item android:state_pressed="true" android:drawable="@color/i4p_4" />
</selector>
