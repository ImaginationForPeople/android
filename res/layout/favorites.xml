<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<ListView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/favorites_list" />
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/favorites_empty_container"
	    android:visibility="gone">
	    <ImageView
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:id="@+id/favorites_empty_icon"
	        android:src="@drawable/favorites_empty" />
	    <TextView
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/favorites_empty_icon"
            android:id="@+id/favorites_empty_text"
            android:text="@string/favorites_no" />
	</RelativeLayout>
</FrameLayout>