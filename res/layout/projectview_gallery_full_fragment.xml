<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/projectslist_item_layout"
    android:background="@android:color/black">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:id="@+id/projectview_gallery_fullimage" />
    
    <SlidingDrawer
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/projectview_gallery_slider"
        android:handle="@+id/projectview_gallery_slider_handle"
        android:content="@+id/projectview_gallery_slider_content">
        
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@id/projectview_gallery_slider_handle"
            android:src="@drawable/ic_menu_slider" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@id/projectview_gallery_slider_content"
            android:background="#A7000000">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectview_gallery_slider_content_date"
                android:textColor="@android:color/white" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectview_gallery_slider_content_description"
                android:textColor="@android:color/white" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectview_gallery_slider_content_author"
                android:textColor="@android:color/white" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectview_gallery_slider_content_source"
                android:textColor="@android:color/white" />
            
        </LinearLayout>
        
	</SlidingDrawer>
</RelativeLayout>