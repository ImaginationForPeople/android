<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="130dp"
    android:id="@+id/projectslist_item_layout">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/project_nophoto"
        android:contentDescription="@string/projectslist_item_image_description"
        android:id="@+id/projectslist_item_image" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:height="40dp"
        android:id="@+id/projectslist_item_text" />    
</RelativeLayout>